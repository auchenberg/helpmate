
<div class="new-request-form">

  <h1>Make a new request</h1>

  <form action="/requests" method="post">
    <input type="hidden" name="_csrf" value="{{csrf_token}}" />
    <fieldset>
      <div class="form-group">
        <input type="text" class="form-control" name="title" id="title" placeholder='Give us a good title, like "Call my Doctor", not like "Task #1"'>
      </div>
      <div class="form-group">
        <textarea class="form-control" name="content" id="content" placeholder="Give us some details about your request"></textarea>
      </div>

      <button type="submit" class="btn btn-success pull-right">Send request</button>
    </fieldset>
  </form>

</div>
